<body class="gradient">

    <% flash.each do |key, value| %>
      <%= content_tag :div, value, class: "alert alert-#{key}" %>
    <% end %>

  <div class="container">
    <div class="jumbotron">
      <h1 class="bigface">SaaS</h1>
    </div>

      <div class="row">

      <div class="col-md-6">
          <div class="well">
            <h2 class="text-center">Basic Membership</h2>
            <h4>Sign up for free and get basic access to the community.</h4>
            <br/>
            <%= link_to "Sign up with Basic", new_user_registration_path(plan: @basic_plan.id), class: 'btn btn-primary btn-lg btn-block' %>
        </div>
      </div>

      <div class="col-md-6">
        <div class="well">
          <h2 class="text-center">Pro Membership</h2>
          <h4>Sign up for the pro account for $10/month and get access to the community contact information!</h4>
          <%= link_to "Sign up with Pro", new_user_registration_path(plan: @pro_plan.id), class: 'btn btn-success btn-lg btn-block' %>
        </div>
      </div>

    </div>
  </div>
  <% if current_user %>
    <%= link_to "Create Profile", new_user_profile_path(current_user), style: "color:white;font-size:24px;margin:2px" %>
  <% end %>

  <% content_tag :div, current_user, style: "color:white;font-size:24px;margin:2px" %>

    <style>
      html {font-family:Verdana}
      body {margin:0px;position:relative;}
      h1.bigface {text-align:center;font-size:150px;color:rgb(30,30,35);margin:calc(50% - 550px) calc(50% - 150px)}
    </style>

</body>
